html

head
    title Administrador de Productos
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js")

body
    header(class="d-flex row justify-content-center text-center my-5 w-100")
        h1 Administrador de Productos
        a(href="/productos" class="btn btn-primary w-auto") Ir a Lista de Productos
    div(class="d-flex justify-content-center gap-5")
        div
            form(action="/productos" method="post")
                div(class="mb-3")
                    label(for="title" class="form-label") Title 
                    input(type="text" class="form-control" id="title" name="title")
                div(class="mb-3")
                    label(for="price" class="form-label") Price
                    input(type="text" class="form-control" id="price" name="price")
                div(class="mb-3")
                    label(for="thumbnail" class="form-label") Thumbnail
                    input(type="text" class="form-control" id="thumbnail" name="thumbnail")
                button(type="submit" class="btn btn-primary") Enviar